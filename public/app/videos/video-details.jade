.container
   h1 {{video.title}}
   .row 
      .col-md-6
         h3(ng-show="video.featured") Featured
         h3 Published on {{video.published | date}}

      .col-md-6
         .panel.panel-primary
            .panel-heading Tags
            .panel-body
               div(ng-repeat="tag in video.tags") {{tag}}